<%# Banner %>

<div id="container-banner">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2370&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
    <div class="container">
      <h1>Save any kind of movies</h1>
      <p>Your personal app for movie lists</p>
    </div>
  </div>
</div>



<%# Lists %>
<h2>All your lists</h2>

  <div class="cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list), class: "link-card" %>
    </div>
  </div>
  <% end %>


  <p>
  <%= link_to "Add a new list", new_list_path %>

  </p>
</div>
